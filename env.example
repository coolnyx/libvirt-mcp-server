# libvirt-mcp-server 环境变量示例
# 复制此文件为 .env 并根据您的环境进行配置

# Libvirt 配置
LIBVIRT_URI=qemu:///system
LIBVIRT_TIMEOUT=30
LIBVIRT_READONLY=false

# MCP 服务器配置
MCP_SERVER_NAME=libvirt-manager
MCP_HOST=127.0.0.1
MCP_PORT=8000
MCP_TRANSPORT=stdio

# 安全配置
MCP_AUTH_REQUIRED=true
MCP_AUDIT_LOG=true

# 日志配置
MCP_LOG_LEVEL=INFO
MCP_LOG_FILE=/var/log/libvirt-mcp-server.log

# 配置文件路径
LIBVIRT_MCP_CONFIG_FILE=./config.yaml
